{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Mcp": {
    "Server": {
      "ShutdownWaitSeconds": 2,
      "LogStartupMessage": true
    },
    "RateLimit": {
      "PermitLimit": 64,
      "QueueLimit": 256
    },
    "Client": {
      "MaxConcurrentRequests": 16,
      "DefaultRequestTimeoutSeconds": 20,
      "MaxRetries": 2,
      "RetryBackoffBaseMs": 200
    }
  }
}


